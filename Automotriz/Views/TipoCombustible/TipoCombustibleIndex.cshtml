        $("#TablaDatos").table2excel({
            //exclude: ".noExl",
            name: "Tipo de Combustible",
            filename: "Tipo de Combustible",
            fileext: ".xls",
            exclude_img: true,
            exclude_links: true,
            exclude_inputs: true
        });


    }


</script>


