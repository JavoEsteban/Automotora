    function listarTipoCombustible() {
        $.ajax({
            type: "POST",
            url: "/TipoCombustible/ObtieneListadoCombustibles",
            content: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                try {
                    var data = jQuery.parseJSON(JSON.stringify(response));  // AQUI SE REVISA LA RESPUESTA DEL SERVICIO
                    let listaMarcas = jQuery.parseJSON(data.Descripcion)
                    console.log(listaMarcas);
                    if (data.Respuesta == "OK") // AQUI MANEJA SI EL SERVICIO RETORNO OK O CONTROLES DE ERROR
                    {
                        $("#listarTipoCombustible").html("");


                        $.each(listaMarcas, function (index, item) {
                            var vigencia = item.VIGENCIA;

                            if (vigencia == 1) {
                                vigencia = "Vigente";
                            } else {
                                vigencia = "No Vigente";

                            }
                            let strDescripcion = "'" + item.DESCRIPCION.toString() + "'";

                            let strHtml = '';

                            strHtml += '<tr>';
                            strHtml += '<td>' + item.DESCRIPCION + '</td>';
                            strHtml += '<td>' + vigencia + '</td>';
                            strHtml += '<td> <a href="#" onclick="obtenerCombustiblePorID(' + item.ID_TIPO_COMBUSTIBLE + ')"><img src="https://img.icons8.com/ultraviolet/25/000000/pencil.png"></a></td>';
                            strHtml += '<td> <a href="#" onclick="EliminarCombustible(' + item.ID_TIPO_COMBUSTIBLE + ',' + strDescripcion + ')"><img src="https://img.icons8.com/ultraviolet/25/000000/delete-sign.png"></a></td>'
                            strHtml += '</tr">';

                            $("#listarTipoCombustible").append(strHtml);

                        });


                    }  // IF LA RESPUESTA DEL SERVICIO ES NOK ERROR CONTROLADO......
                    else {
                        swal({
                            title: 'Automotriz Larraín',
                            text: 'Error al obtener listado de combustibles' + data.Detalle_Error + '',
                            type: 'error',
                            confirmButtonColor: '#FE6A00',
                            confirmButtonText: 'OK',
                            confirmButtonClass: 'btn btn-info',
                            allowEscapeKey: false,
                            allowOutsideClick: false
                        });

                        return false;
                    }

                } catch (err) { // ACCIÓN DEL ERROR DE JAVASCRIPT

                    swal({
                        title: 'Automotriz Larraín',
                        text: 'Error al listar Combustibles ' + data.Detalle_Error + '',
                        type: 'error',
                        confirmButtonColor: '#FE6A00',
                        confirmButtonText: 'OK',
                        confirmButtonClass: 'btn btn-info'
                    });

                    return false;
                }

            },
            error: function (xhr, textStatus, errorThrown) { // ACCIÓN DEL ERROR DEL SERVICIO AJAX.
                swal({
                    title: 'Automotriz Larraín',
                    text: 'Error de Conexión' + textStatus + '',
                    type: 'error',
                    confirmButtonColor: '#FE6A00',
                    confirmButtonText: 'OK',
                    confirmButtonClass: 'btn btn-info'
                });

                return false;
            }
        });
    }

    function limpiarDatos() {
        $("#ID_TIPO_COMBUSTIBLE").val(0);
        $("#CmbVigencia").val(1);


        $("#TxtDescripcion").val("");

    }

    function subiraFormulario() {
        let elemento = document.getElementById('seccionDatos');
        elemento.scrollIntoView();
    }

    function obtenerCombustiblePorID(id_Combustible) {
        gfProceso();
        let tipoCombustible = {
            ID_TIPO_COMBUSTIBLE: id_Combustible
        }

        $.ajax({
            type: "POST",
            url: "/TipoCombustible/ObtieneCombustiblePorId",
            content: "application/json; charset=utf-8",
            dataType: "json",
            data: tipoCombustible,
            success: function (response) {
                    gfProceso();

                try {

                    var data = jQuery.parseJSON(JSON.stringify(response));  // AQUI SE REVISA LA RESPUESTA DEL SERVICIO
                    console.log(data);
                    let detalle = jQuery.parseJSON(data.Descripcion)
                    console.log(detalle);

                    if (data.Respuesta == "OK") // AQUI MANEJA SI EL SERVICIO RETORNO OK O CONTROLES DE ERROR
                    {
                        $('#ID_TIPO_COMBUSTIBLE').val(detalle.ID_TIPO_COMBUSTIBLE);
                        $('#TxtDescripcion').val(detalle.DESCRIPCION);

                        $('#CmbVigencia').val(detalle.VIGENCIA);


                        $("#Btn_Modificar").removeAttr("disabled");
                        $("#Btn_Guardar").attr("disabled", true);
                        subiraFormulario();



                    }  // IF LA RESPUESTA DEL SERVICIO ES NOK ERROR CONTROLADO......
                    else {

                        swal({

                        title: 'Automotriz Larraín',
                            text: 'Error al obtener los datos del Tipo de Combustible' + data.Detalle_Error + '',
                            type: 'error',
                            confirmButtonColor: '#FE6A00',
                            confirmButtonText: 'OK',
                            confirmButtonClass: 'btn btn-info',
                            allowEscapeKey: false,
                            allowOutsideClick: false,
                        });

                        return false;
                    }

                } catch (err) { // ACCIÓN DEL ERROR DE JAVASCRIPT
                    swal({
                        title: 'Automotriz Larraín',
                        text: 'Error al obtener el Tipo de Combustible ' + err + '',
                        type: 'error',
                        confirmButtonColor: '#FE6A00',
                        confirmButtonText: 'OK',
                        confirmButtonClass: 'btn btn-info',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                    });

                    return false;
                }

            },
            error: function (xhr, textStatus, errorThrown) { // ACCIÓN DEL ERROR DEL SERVICIO AJAX.
                gfProceso();
                swal({
                    title: 'Automotriz Larraín',
                    text: 'Error de Conexión' + textStatus + '',
                    type: 'error',
                    confirmButtonColor: '#FE6A00',
                    confirmButtonText: 'OK',
                    confirmButtonClass: 'btn btn-info',
                    allowEscapeKey: false,
                    allowOutsideClick: false,
                });

                return false;
            }
        });
    }

    //////+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

    function validar() {
        let vigencia = $("#CmbVigencia").val();
        let descripcion = $("#TxtDescripcion").val();


        if (descripcion == "" || descripcion == null) {
            return false;
        } else {
            return true
        }

    }
    $('#Btn_Guardar').click(function (e) {
        let valido = false;
        valido = validar();

        if (valido == false) {
            swal({
                title: 'Larrain automotriz',
                text: "Debe rellenar todos los campos",
                type: 'error',
                customClass: 'swalAjustado',
                confirmButtonColor: '#299BE8',
                confirmButtonText: 'OK',
                confirmButtonClass: 'btn btn-info'
            });
            return false;
        }
        gfProceso();
        // Estructura de la Clase para Guardar Información
        let tipoCombustible = {
            DESCRIPCION: $('#TxtDescripcion').val().toUpperCase(),
            VIGENCIA: $('#CmbVigencia').val()
        }


        $.ajax({
            type: "POST",
            url: "/TipoCombustible/AgregarCombustible",
            content: "application/json; charset=utf-8",
            dataType: "json",
            data: tipoCombustible,
            success: function (response) {
                gfProceso();
                // FUNCION PARA VALIDAR AJAX Y RESPUESTA..
                var data;
                var detalle;
                try {  // AQUI SE CONTROLA EL ERROR DE JAVASCRIPT


                    data = jQuery.parseJSON(JSON.stringify(response));  // AQUI SE REVISA LA RESPUESTA DEL SERVICIO

                    if (data.Respuesta == "OK") // AQUI MANEJA SI EL SERVICIO RETORNO OK O CONTROLES DE ERROR
                    {

                        swal({
                            title: 'Automotriz Larraín',
                            text: "Se agregó el Tipo de Combustible correctamente",
                            type: 'success',
                            confirmButtonColor: '#4caf50',
                            //cancelButtonColor: '#d33',
                            confirmButtonText: 'OK',
                            allowEscapeKey: false,
                            allowOutsideClick: false,
                            onClose: function () {
                                listarTipoCombustible();
                                limpiarDatos();

                            }

                        });

                    }  // IF LA RESPUESTA DEL SERVICIO ES NOK ERROR CONTROLADO......
                    else {



                        swal({
                            title: 'Automotriz Larraín',
                            text: 'Error al agregar el tipo de Combustible' + data.Detalle_Error + '',
                            type: 'error',
                            confirmButtonColor: '#FE6A00',
                            confirmButtonText: 'OK',
                            confirmButtonClass: 'btn btn-info',
                            allowEscapeKey: false,
                            allowOutsideClick: false,
                        });

                        return false;
                    }

                } catch (err) { // ACCIÓN DEL ERROR DE JAVASCRIPT

                    gfProceso();
                    swal({
                        title: 'Automotriz Larraín',
                        text: 'Error al agregar el tipo de Combustible ' + data.Detalle_Error + '',
                        type: 'error',
                        confirmButtonColor: '#FE6A00',
                        confirmButtonText: 'OK',
                        confirmButtonClass: 'btn btn-info',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                    });

                    return false;
                }



            },
            error: function (xhr, textStatus, errorThrown) { // ACCIÓN DEL ERROR DEL SERVICIO AJAX.
                gfProceso();
                swal({
                    title: 'Automotriz Larraín',
                    text: 'Error de Conexión' + textStatus + '',
                    type: 'error',
                    confirmButtonColor: '#FE6A00',
                    confirmButtonText: 'OK',
                    confirmButtonClass: 'btn btn-info',
                    allowEscapeKey: false,
                    allowOutsideClick: false,
                });


                return false;
            }
        });



    });


    $('#Btn_Modificar').click(function (e) {
        let valido = false;
        valido = validar();

        if (valido == false) {
            swal({
                title: 'Larrain automotriz',
                text: "Debe rellenar todos los campos",
                type: 'error',
                customClass: 'swalAjustado',
                confirmButtonColor: '#299BE8',
                confirmButtonText: 'OK',
                confirmButtonClass: 'btn btn-info'
            });
            return false;
        }
        gfProceso();
        // Estructura de la Clase para Guardar Información
        let tipoCombustible = {
            ID_TIPO_COMBUSTIBLE: $('#ID_TIPO_COMBUSTIBLE').val(),
            DESCRIPCION: $('#TxtDescripcion').val().toUpperCase(),
            VIGENCIA: $('#CmbVigencia').val()
        }

        $.ajax({
            type: "POST",
            url: "/TipoCombustible/Editar_tipoCombustible",
            content: "application/json; charset=utf-8",
            dataType: "json",
            data: tipoCombustible,

            success: function (response) {
                gfProceso();
                var Data = response;


                if (Data.Respuesta == "OK") {
                    let nombreMinus = tipoCombustible.DESCRIPCION.toLowerCase();
                    let nombreCapitalizado = MaysPrimera(nombreMinus);

                    swal({
                        title: 'Automotriz Larraín',
                        text: 'Se han hactualizado correctamente los datos del Tipo de Combustible' + nombreCapitalizado + '',
                        type: 'success',
                        confirmButtonColor: '#FE6A00',
                        confirmButtonText: 'Continuar',
                        confirmButtonClass: 'btn btn-info',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        onClose: function () {
                            listarTipoCombustible();
                            limpiarDatos();
                            $("#Btn_Guardar").removeAttr("disabled");
                            $("#Btn_Modificar").attr("disabled", true);

                        }
                    });

                }
                else {
                    swal({
                        title: 'Automotriz Larraín',
                        text: 'ERROR al Modificar el Tipo de Combustible ' + Data.Detalle_Error,
                        type: 'warning',
                        confirmButtonColor: '#FE6A00',
                        confirmButtonText: 'OK',
                        confirmButtonClass: 'btn btn-info',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                    })
                }
            },

            error: function (xhr, textStatus, errorThrown) {
                gfProceso();
                swal({
                    title: 'Automotriz Larraín',
                    text: 'ERROR al Modificar el Tipo de Combustible seleccionado' + textStatus,
                    type: 'warning',
                    confirmButtonColor: '#FE6A00',
                    confirmButtonText: 'OK',
                    confirmButtonClass: 'btn btn-info',
                    allowEscapeKey: false,
                    allowOutsideClick: false,
                })
            }
        });
    });







    function EliminarCombustible(id_combustible, nombreCombustible) {

        let tipoCombustible = {
            ID_TIPO_COMBUSTIBLE: id_combustible,
            DESCRIPCION: nombreCombustible
        }
        nombreCombustible = nombreCombustible.toLowerCase();
        let nombreCapitalizado = MaysPrimera(nombreCombustible);
        swal({
            title: 'Automotriz Larraín ',
            text: "Se eliminará el tipo de Combustible " + nombreCapitalizado + "",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#4caf50',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Confirmar',
            allowEscapeKey: false,
            allowOutsideClick: false,

        }).then(function () {
            gfProceso();
            // AJAX

            $.ajax({
                type: "POST",
                url: "/TipoCombustible/EliminarCombustible",
                content: "application/json; charset=utf-8",
                dataType: "json",
                data: tipoCombustible,

                success: function (response) {
                    gfProceso();
                    // FUNCION PARA VALIDAR AJAX Y RESPUESTA..
                    var data;
                    var detalle;
                    try {  // AQUI SE CONTROLA EL ERROR DE JAVASCRIPT
                        data = jQuery.parseJSON(JSON.stringify(response));  // AQUI SE REVISA LA RESPUESTA DEL SERVICIO

                        if (data.Respuesta == "OK") // AQUI MANEJA SI EL SERVICIO RETORNO OK O CONTROLES DE ERROR
                        {

                            swal({
                                title: 'Automotriz Larraín ',
                                text: "Tipo de Combustible " + nombreCapitalizado + " eliminado con éxito",
                                type: 'success',
                                confirmButtonColor: '#4caf50',
                                //cancelButtonColor: '#d33',
                                confirmButtonText: 'OK',
                                allowEscapeKey: false,
                                allowOutsideClick: false,
                                onClose: function () {
                                    listarTipoCombustible();

                                }

                            });


                        }  // IF LA RESPUESTA DEL SERVICIO ES NOK ERROR CONTROLADO......
                        else {



                            swal({
                                title: 'Automotriz Larraín',
                                text: data.Detalle_Error + '',
                                type: 'error',
                                confirmButtonColor: '#FE6A00',
                                confirmButtonText: 'OK',
                                confirmButtonClass: 'btn btn-info',
                                allowEscapeKey: false,
                                allowOutsideClick: false,
                            });




                            return false;
                        }

                    } catch (err) { // ACCIÓN DEL ERROR DE JAVASCRIPT
                        gfProceso();

                        swal({
                            title: 'Automotriz Larraín',
                            text: 'Error al eliminar el tipo de Combustible' + data.Detalle_Error + '',
                            type: 'error',
                            confirmButtonColor: '#FE6A00',
                            confirmButtonText: 'OK',
                            confirmButtonClass: 'btn btn-info',
                            allowEscapeKey: false,
                            allowOutsideClick: false,
                        });



                        return false;
                    }



                },
                error: function (xhr, textStatus, errorThrown) { // ACCIÓN DEL ERROR DEL SERVICIO AJAX.

                    swal({
                        title: 'Automotriz Larraín',
                        text: 'Error de Conexión' + textStatus + '',
                        type: 'error',
                        confirmButtonColor: '#FE6A00',
                        confirmButtonText: 'OK',
                        confirmButtonClass: 'btn btn-info',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                    });

                    gfProceso();
                    return false;
                }
            });

            //FIN



        }).catch(function (reason) {
            //  alert("The alert was dismissed by the user: " + reason);
        });





    }


